{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "lib": ["dom", "es2022"],
        "strict": true,
        "noEmit": true,
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node"],
        "allowImportingTsExtensions": true
    },
    "include": ["src/**/*", "test/**/*"]
}
